extends _layout
block content
	h2 Контакты
	table(class="table")
		thead
			tr
				th #
				th Имя
				th Фамилия
				th Телефон
				th Email
		tbody
			tr(ng-repeat="contact in contacts")
				td {{$index}}
				td {{contact.name}}
				td {{contact.lastname}}
				td {{contact.tel}}
				td {{contact.mail}}


